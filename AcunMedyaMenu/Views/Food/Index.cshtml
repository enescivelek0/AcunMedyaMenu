@model List<AcunMedyaMenu.Entities.Food>

@{
    ViewData["Title"] = "Food List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Food</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Food Listesi</div>
                    </div>
                    <div class="card-body">
                        <div class="card-sub">
                            Food ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
                        </div>
                        <table class="table mt-3">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">İsim</th>
                                    <th scope="col">Açıklama</th>
                                    <th scope="col">Icon</th>
                                    <th scope="col">Sil</th>
                                    <th scope="col">Güncelle</th>
                                    <th scope="col">Aktif/Pasif Yap</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FoodId</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>@item.Icon</td>
                                        <td><a href="/Food/DeleteFood/@item.FoodId" class="btn btn-danger">Sil</a></td>
                                        <td><a href="/Food/UpdateFood/@item.FoodId" class="btn btn-success">Güncelle</a></td>
                                        <td>
                                            <a href="/Food/ToggleActive/@item.FoodId"
                                               class="btn @(item.IsActive ? "btn-warning" : "btn-primary")">
                                                @(item.IsActive ? "Pasif Yap" : "Aktif Yap")
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <a href="/Food/CreateFood/" class="btn btn-primary">Yeni Food Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
