@model List<AcunMedyaMenu.Entities.Chef>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Şef</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Şef Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Şef ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Resim</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">İş</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ChefId</td>
										<td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
										<td>@item.NameSurname</td>
										<td>@item.Title</td>
										<td>@item.Status</td>

										<td><a href="/Chef/DeleteChef/@item.ChefId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Chef/UpdateChef/@item.ChefId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Chef/CreateChef/" class="btn btn-primary">Yeni Şef Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
