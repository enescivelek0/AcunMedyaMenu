@model List<AcunMedyaMenu.Entities.Subscriber>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int count = 0;
}
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>İsim Soyisim</th>
        <th>Email</th>
        <th>Abone Olunma Tarihi</th>
        <th>Sil</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.FullName</td>
            <td>@item.Email</td>
            <td>@item.SubscribedAt</td>
            <td>
                <a asp-action="DeleteNewsletter" asp-controller="Newsletter" asp-route-id="@item.Id" class="btn btn-outline-danger">Sil</a>
            </td>
        </tr>
    }

</table>



