@model List<AcunMedyaMenu.Entities.Product>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürünler</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Ürün ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Resim</th>
									<th scope="col">Ürün Adı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Fiyat</th>
									<th scope="col">Durum</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
									<th scope="col">Aktif/Pasif Yap</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.ProductId</td>
										<td><img src="@item.ImageUrl" style="height:50px;width:50px" /></td>
										<td>@item.ProductName</td>
										<td>@item.Description</td>
										<td>@item.Price</td>
										<td>@item.Status</td>
										<td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Product/UpdateProduct/@item.ProductId" class="btn btn-success">Güncelle</a></td>
										<td>
											<a href="/Product/ToggleActive/@item.ProductId"
											   class="btn @(item.IsActive ? "btn-warning" : "btn-primary")">
												@(item.IsActive ? "Pasif Yap" : "Aktif Yap")
											</a>
										</td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Product/CreateProduct/" class="btn btn-primary">Yeni Ürün Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
