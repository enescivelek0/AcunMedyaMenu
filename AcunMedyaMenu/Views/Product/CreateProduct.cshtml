@using AcunMedyaMenu.Entities
@model Product
@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Ürün</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Ürün Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<label>Resim</label>
							<input type="text" asp-for="ImageUrl" class="form-control" />
							<br />
							<label>Ürün Adı</label>
							<input type="text" asp-for="ProductName" class="form-control" />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<label>Fiyat</label>
							<input type="text" asp-for="Price" class="form-control" />
							<br />
							<label>Durum</label>
							<input type="text" asp-for="Status" class="form-control" />
							<br />
							<br />
							<button class="btn btn-primary">Ürün Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>