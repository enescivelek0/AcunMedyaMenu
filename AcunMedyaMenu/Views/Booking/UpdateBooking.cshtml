@using AcunMedyaMenu.Entities
@model Booking
@{
    ViewData["Title"] = "UpdateBooking";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">Rezervasyonlar</h4>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <div class="card-title">Rezervasyon Güncelleme Sayfası</div>
                    </div>
                    <div class="card-body">

                        <form method="post">
                            <input type="hidden" asp-for="BookingId" />
                            <label>Ad Soyad</label>
                            <input type="text" asp-for="Name" class="form-control" />
                            <br />
                            <label>Email</label>
                            <input type="text" asp-for="Email" class="form-control" />
                            <br />
                            <label>Telefon</label>
                            <input type="text" asp-for="Phone" class="form-control" />
                            <br />
                            <label>Tarih</label>
                            <input type="text" asp-for="BookingDate" class="form-control" />
                            <br />
                            <label>Gün ve Saat</label>
                            <input type="text" asp-for="BookingTime" class="form-control" />
                            <br />
                            <label>Kişi Sayısı</label>
                            <input type="text" asp-for="GuestCount" class="form-control" />
                            <br />
                            <label>Açıklama</label>
                            <input type="text" asp-for="Description" class="form-control" />
                            <br />
                            <br />
                            <button class="btn btn-warning">Rezervasyon Güncelle</button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

