@model List<AcunMedyaMenu.Entities.Booking>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyonlar</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Rezervasyon Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Referans ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ad Soyad</th>
									<th scope="col">Email</th>
									<th scope="col">Telefon</th>
									<th scope="col">Tarih</th>
									<th scope="col">Gün ve Saat</th>
									<th scope="col">Kişi Sayısı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.BookingId</td>
										<td>@item.Name</td>
										<td>@item.Email</td>
										<td>@item.Phone</td>
										<td>@item.BookingDate</td>
										<td>@item.BookingTime</td>
										<td>@item.GuestCount</td>
										<td>@item.Description</td>
										<td><a href="/Booking/DeleteBooking/@item.BookingId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Booking/UpdateBooking/@item.BookingId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Booking/CreateBooking/" class="btn btn-primary">Yeni Rezervasyon Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
