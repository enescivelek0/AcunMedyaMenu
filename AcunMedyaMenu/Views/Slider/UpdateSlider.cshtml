@using AcunMedyaMenu.Entities
@model Slider
@{
	ViewData["Title"] = "UpdateSlider";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Slider</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Slider Ekleme Sayfası</div>
					</div>
					<div class="card-body">

						<form method="post">
							<input type="hidden" asp-for="SliderId" />
							<label>Resim</label>
							<input type="text" asp-for="Image" class="form-control" />
							<br />
							<label>Slider Adı</label>
							<input type="text" asp-for="Title" class="form-control" />
							<br />
							<label>Açıklama</label>
							<input type="text" asp-for="Description" class="form-control" />
							<br />
							<br />
							<button class="btn btn-primary">Slider Ekle</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>