@model List<AcunMedyaMenu.Entities.Slider>
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Slider</h4>
		<div class="row">
			<div class="col-md-12">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Slider Listesi</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Slider ile ilgili işlemleri aşağıdaki panelden yapabilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Resim</th>
									<th scope="col">Slider Adı</th>
									<th scope="col">Açıklama</th>
									<th scope="col">Sil</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.SliderId</td>
										<td><img src="@item.Image" style="height:50px;width:50px" /></td>
										<td>@item.Title</td>
										<td>@item.Description</td>
										<td><a href="/Slider/DeleteSlider/@item.SliderId" class="btn btn-danger">Sil</a></td>
										<td><a href="/Slider/UpdateSlider/@item.SliderId" class="btn btn-success">Güncelle</a></td>
									</tr>
								}
							</tbody>
						</table>
						<a href="/Slider/CreateSlider/" class="btn btn-primary">Yeni Slider Girişi</a>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
