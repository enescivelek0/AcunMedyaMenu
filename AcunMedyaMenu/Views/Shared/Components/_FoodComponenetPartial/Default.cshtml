@model List<AcunMedyaMenu.Entities.Food>

<div class="food">
    <div class="container">
        <div class="row align-items-center">
            @foreach (var item in Model)
            {
                <div class="col-md-4">
                    <div class="food-item">
                        <i class="@item.Icon"></i>
                        <h2>@item.Name</h2>
                        <p>
                            @item.Description
                        </p>
                        <a href="/Default#menu">Menüyü Görüntüle</a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
