@model List<AcunMedyaMenu.Entities.Slider>

<div class="carousel">
    <div class="container-fluid">
        <div class="owl-carousel">
            @foreach (var item in Model)
            {
                <div class="carousel-item">
                    <div class="carousel-img">
                        <img src="@item.Image" alt="Image">
                    </div>
                    <div class="carousel-text">
                        <h1>@item.Title <span>Delivery</span></h1>
                        <p>
                            @item.Description
                        </p>
                        <div class="carousel-btn">
                            <a class="btn custom-btn" href="/Default#menu">Menüyü Görüntüle</a>
                            <a class="btn custom-btn" href="/Default#booking">Hemen Rezervasyon Yap!</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>